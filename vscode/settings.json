{
  // VS Code Configurations
  "editor.fontSize": 12,
  "editor.rulers": [80, 150],
  "editor.detectIndentation": false,
  "editor.insertSpaces": true,
  "editor.tabSize": 2,
  "editor.fontLigatures": false,
  "editor.trimAutoWhitespace": true,
  "editor.tabCompletion": "on",
  "editor.formatOnSave": true,
  "editor.formatOnSaveMode": "modifications",
  "editor.cursorBlinking": "blink",
  "editor.minimap.enabled": false,
  "editor.fontFamily": "Menlo, Mocano, 'Courier New', monospace",
  "editor.smoothScrolling": true,

  "explorer.openEditors.visible": 0,
  "explorer.confirmDragAndDrop": false,

  "extensions.autoUpdate": true,
  "extensions.ignoreRecommendations": false,

  "files.autoSave": "off",
  "files.trimTrailingWhitespace": true,
  "files.exclude": {
    "yarn.lock": true
  },
  "files.insertFinalNewline": true,

  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "/vendor": true
  },
  "search.smartCase": true,
  "search.useGlobalIgnoreFiles": true,
  "search.showLineNumbers": true,

  "terminal.external.osxExec": "iTerm.app",
  "terminal.integrated.fontFamily": "'mononoki Nerd Font'",
  "terminal.integrated.fontSize": 12,
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.shell.osx": "/usr/local/bin/fish", // might need to be changed depending on computer (M1/M2 Macs store fish in different location)

  "window.restoreWindows": "none",
  "window.title": "${activeEditorMedium}${separator}${rootName}",
  "window.newWindowDimensions": "maximized",

  "workbench.iconTheme": "material-icon-theme",
  "workbench.colorCustomizations": {},
  "material-icon-theme.folders.theme": "specific",
  "material-icon-theme.saturation": 0.7,
  "material-icon-theme.opacity": 0.7,

  // Language Specific Configurations
  "javascript.updateImportsOnFileMove.enabled": "always",

  "python.languageServer": "Pylance",
  "python.terminal.activateEnvironment": false,

  "[scss]": {
    "editor.detectIndentation": false,
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.detectIndentation": false,
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascriptreact]": {
    "editor.detectIndentation": false,
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.detectIndentation": false,
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.insertSpaces": true,
    "editor.tabSize": 2
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[python]": {
    "editor.tabSize": 4
  },
  "explorer.confirmDelete": false,
  "workbench.colorTheme": "Nord",
  "editor.suggestSelection": "first",
  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
  "java.configuration.checkProjectSettingsExclusions": false,
  "emmet.preferences": {},
  "python.formatting.autopep8Args": ["--ignore=E731"],
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "workbench.editorAssociations": {
    "*.ipynb": "jupyter-notebook"
  },
  "eslint.format.enable": true,
  "notebook.cellToolbarLocation": {
    "default": "right",
    "jupyter-notebook": "left"
  },
  "security.workspace.trust.untrustedFiles": "open",
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  }
}
